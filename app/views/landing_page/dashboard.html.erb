<div class="container is-fluid" data-controller="artist-sort fuzzy-search">
  <p class="title is-1">BAPS</p>
  <p class="subtitle">Better Artist Page Spotify</p>

  <p class="subtitle">Welcome, <%= @user['info']['name'] %></p>

  <nav class="level">
    <div class="level-left">
      <div class="level-item">
        <p class="title is-1">My Artists</p>
      </div>
      <div class="level-item">
        <input class="input" type="text" placeholder="Find an artist (Fuzzy Search)" data-action="fuzzy-search#search" data-fuzzy-search-target="input">
      </div>
      <div class="level-item">
        <div class="select">
          <select data-action="artist-sort#artistsSort" data-artist-sort-target="select">
            <option value="default">Sort By: Spotify Default</option>
            <option value="alphabetical-asc">Sort By: Alphabetically A-Z</option>
            <option value="alphabetical-desc">Sort By: Alphabetically Z-A</option>
            <option value="followers-asc">Sort By: Followers Low-High</option>
            <option value="followers-desc">Sort By: Followers High-Low</option>
          </select>
        </div>
      </div>
      <div class="level-item">
        <%= button_to "Logout", sign_out_path, method: :get, class: 'button' %>
      </div>
    </div>
  </nav>

  <div class="columns is-multiline" data-artist-sort-target="columns" data-fuzzy-search-target="artist_cards">
    <%= render partial: "artist_card", collection: @artists, as: :artist %>
  </div>
</div>
